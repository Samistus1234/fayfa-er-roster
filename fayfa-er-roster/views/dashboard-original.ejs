<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fayfa General Hospital - ER Roster Dashboard</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- GSAP for animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <!-- Animated Background -->
    <div class="animated-bg">
        <div class="gradient-bg"></div>
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
        </div>
    </div>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar-modern">
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <div class="d-flex align-items-center">
                    <div class="brand-icon">
                        <i class="fas fa-hospital-user"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="sidebar-title">Fayfa General Hospital</h5>
                        <p class="sidebar-subtitle">Emergency Room Management</p>
                    </div>
                </div>
            </div>

            <!-- Period Selection -->
            <div class="sidebar-section">
                <div class="section-title">
                    <i class="fas fa-calendar-alt"></i>
                    PERIOD SELECTION
                </div>
                <div class="glass-effect main-card" style="padding: 1.5rem;">
                    <div class="modern-input-group">
                        <input type="month" class="modern-input glass-input" id="monthYear" value="2025-06">
                    </div>
                    <button class="modern-btn primary-btn glass-btn w-100 mt-3" onclick="loadRosterData()">
                        <i class="fas fa-sync-alt me-2"></i>
                        <span>Load Roster</span>
                    </button>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="sidebar-section">
                <div class="section-title">
                    <i class="fas fa-bolt"></i>
                    QUICK ACTIONS
                </div>
                <div class="quick-actions-grid">
                    <div class="action-card" onclick="showConsults()">
                        <div class="action-icon" style="background: var(--info-gradient);">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <div class="action-title">Consults</div>
                    </div>
                    <div class="action-card" onclick="showReferrals()">
                        <div class="action-icon" style="background: var(--success-gradient);">
                            <i class="fas fa-ambulance"></i>
                        </div>
                        <div class="action-title">Referrals</div>
                    </div>
                    <div class="action-card" onclick="showLogReferral()">
                        <div class="action-icon" style="background: var(--warning-gradient);">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <div class="action-title">Log Referral</div>
                    </div>
                    <div class="action-card" onclick="showSaudiCrescent()">
                        <div class="action-icon" style="background: var(--danger-gradient);">
                            <i class="fas fa-crescent-moon"></i>
                        </div>
                        <div class="action-title">Saudi Crescent</div>
                    </div>
                    <div class="action-card" onclick="showLicenses()">
                        <div class="action-icon" style="background: var(--purple-gradient);">
                            <i class="fas fa-certificate"></i>
                        </div>
                        <div class="action-title">Licenses</div>
                    </div>
                    <div class="action-card" onclick="showImport()">
                        <div class="action-icon" style="background: var(--secondary-gradient);">
                            <i class="fas fa-file-import"></i>
                        </div>
                        <div class="action-title">Import</div>
                    </div>
                    <div class="action-card" onclick="showExport()">
                        <div class="action-icon" style="background: var(--dark-gradient);">
                            <i class="fas fa-file-export"></i>
                        </div>
                        <div class="action-title">Export</div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="sidebar-section">
                <div class="section-title">
                    <i class="fas fa-chart-bar"></i>
                    QUICK STATS
                </div>
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-value" id="activeDoctorsCount">10</div>
                        <div class="stat-label">Active Doctors</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="totalShiftsCount">114</div>
                        <div class="stat-label">Total Shifts</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="avgWorkloadCount">15</div>
                        <div class="stat-label">Avg Workload</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navbar -->
            <div class="navbar-modern">
                <div class="navbar-content">
                    <!-- Search -->
                    <div class="search-container">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="search-input" id="globalSearch" placeholder="Search doctors, shifts, or dates...">
                        <div class="search-shortcut">âŒ˜K</div>
                    </div>

                    <!-- Right Side -->
                    <div class="navbar-nav-modern">
                        <!-- Specialists Available Today -->
                        <div class="specialists-indicator" onclick="showSpecialistsDetails()">
                            <i class="fas fa-user-md"></i>
                            <span id="specialistsTodayCount">3</span>
                        </div>

                        <!-- Theme Toggle -->
                        <button class="theme-toggle" id="lightModeBtn" onclick="setLightMode()">
                            <i class="fas fa-sun"></i>
                        </button>
                        <button class="theme-toggle" id="darkModeBtn" onclick="setDarkMode()">
                            <i class="fas fa-moon"></i>
                        </button>

                        <!-- User Menu -->
                        <div class="user-menu">
                            <div class="user-avatar">Ad</div>
                            <div class="user-info">
                                <h6>Admin</h6>
                                <small>Administrator</small>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dashboard Content -->
            <div class="dashboard-content">
                <!-- Stats Cards -->
                <div class="stats-cards-row">
                    <div class="stat-card glass-effect">
                        <div class="stat-icon" style="background: var(--primary-gradient);">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value" id="totalShiftsDisplay">114</div>
                            <div class="stat-label">Total Shifts</div>
                        </div>
                    </div>
                    <div class="stat-card glass-effect">
                        <div class="stat-icon" style="background: var(--success-gradient);">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value" id="activeDoctorsDisplay">10</div>
                            <div class="stat-label">Active Doctors</div>
                        </div>
                    </div>
                    <div class="stat-card glass-effect">
                        <div class="stat-icon" style="background: var(--warning-gradient);">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value" id="referralDutiesDisplay">33</div>
                            <div class="stat-label">Referral Duties</div>
                            <div class="stat-percentage">22%</div>
                        </div>
                    </div>
                    <div class="stat-card glass-effect">
                        <div class="stat-icon" style="background: var(--info-gradient);">
                            <i class="fas fa-stethoscope"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value" id="specialistsAvailableDisplay">3</div>
                            <div class="stat-label">Specialists Available Today</div>
                        </div>
                    </div>
                </div>

                <!-- Monthly Roster Calendar -->
                <div class="roster-section glass-effect">
                    <div class="section-header">
                        <div class="section-title">
                            <i class="fas fa-calendar-alt"></i>
                            MONTHLY ROSTER
                        </div>
                        <div class="section-actions">
                            <div class="roster-info">
                                <span><i class="fas fa-calendar-day"></i> <span id="monthDays">30</span> Days</span>
                                <span><i class="fas fa-clock"></i> <span id="totalShiftsInfo">147</span> Total Shifts</span>
                                <span><i class="fas fa-users"></i> <span id="activeDoctorsInfo">10</span> Active Doctors</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Calendar Grid -->
                    <div class="calendar-container" id="calendarContainer">
                        <!-- Calendar will be populated by JavaScript -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script src="/js/dashboard.js"></script>
</body>
</html>
