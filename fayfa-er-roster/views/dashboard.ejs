<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fayfa General Hospital - ER Roster Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome - Using only jsdelivr CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.0/css/all.min.css" crossorigin="anonymous">

    <!-- GSAP for animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/dateConsultationModal.css">

    <style>
        /* Emergency CSS to ensure visibility */
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif !important;
            background: #f0f4f8 !important;
            margin: 0 !important;
            padding: 0 !important;
            display: block !important;
            visibility: visible !important;
        }
        .main-container {
            display: flex !important;
            min-height: 100vh !important;
            width: 100% !important;
            position: relative !important;
        }
        .sidebar-modern {
            width: 280px !important;
            background: white !important;
            border-right: 1px solid #e2e8f0 !important;
            position: fixed !important;
            height: 100vh !important;
            overflow-y: auto !important;
            z-index: 1000 !important;
            left: 0 !important;
            top: 0 !important;
            display: block !important;
            visibility: visible !important;
            opacity: 1 !important;
        }
        .main-content {
            margin-left: 280px !important;
            flex: 1 !important;
            background: #f0f4f8 !important;
            width: calc(100% - 280px) !important;
            display: block !important;
            visibility: visible !important;
        }
        .navbar-modern {
            display: block !important;
            visibility: visible !important;
            background: white !important;
            padding: 1rem 2rem !important;
            border-bottom: 1px solid #e2e8f0 !important;
        }
        .sidebar-section {
            display: block !important;
            visibility: visible !important;
            padding: 1.5rem !important;
        }
        .quick-actions-grid {
            display: grid !important;
            grid-template-columns: repeat(2, 1fr) !important;
            gap: 0.75rem !important;
        }
        .action-card {
            display: flex !important;
            flex-direction: column !important;
            align-items: center !important;
            padding: 1rem !important;
            background: white !important;
            border: 1px solid #e2e8f0 !important;
            border-radius: 8px !important;
            cursor: pointer !important;
        }
        .stats-grid {
            display: grid !important;
            grid-template-columns: repeat(3, 1fr) !important;
            gap: 1rem !important;
        }
        /* Force Font Awesome icons to show */
        .fas, .far, .fab {
            font-family: "Font Awesome 6 Free", "FontAwesome", sans-serif !important;
            font-weight: 900 !important;
            display: inline-block !important;
        }

        /* Fallback for missing icons */
        .fas::before, .far::before, .fab::before {
            content: "‚óè" !important;
        }

        /* Specific icon fallbacks */
        .fa-hospital-user::before { content: "üè•" !important; }
        .fa-calendar-alt::before { content: "üìÖ" !important; }
        .fa-sun::before { content: "‚òÄÔ∏è" !important; }
        .fa-cloud-sun::before { content: "üå§Ô∏è" !important; }
        .fa-moon::before { content: "üåô" !important; }
        .fa-user-md::before { content: "üë®‚Äç‚öïÔ∏è" !important; }
        .fa-search::before { content: "üîç" !important; }
    </style>
</head>
<body>
    <!-- Animated Background -->
    <div class="animated-bg">
        <div class="gradient-bg"></div>
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
        </div>
    </div>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar-modern">
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <div class="d-flex align-items-center">
                    <div class="brand-icon">
                        <i class="fas fa-hospital-user"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="sidebar-title">Fayfa General Hospital</h5>
                        <p class="sidebar-subtitle">Emergency Room Management</p>
                    </div>
                </div>
            </div>

            <!-- Period Selection -->
            <div class="sidebar-section">
                <div class="section-title">
                    <i class="fas fa-calendar-alt"></i>
                    PERIOD SELECTION
                </div>
                <div class="glass-effect main-card" style="padding: 1.5rem;">
                    <div class="modern-input-group">
                        <input type="month" class="modern-input glass-input" id="monthYear" value="2025-06">
                    </div>
                    <button class="modern-btn primary-btn glass-btn w-100 mt-3" onclick="loadRosterData()">
                        <i class="fas fa-sync-alt me-2"></i>
                        <span>Load Roster</span>
                    </button>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="sidebar-section">
                <div class="section-title">
                    <i class="fas fa-bolt"></i>
                    QUICK ACTIONS
                </div>
                <div class="quick-actions-grid">
                    <div class="action-card" onclick="showConsults()">
                        <div class="action-icon" style="background: var(--info-gradient);">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <div class="action-title">Consults</div>
                    </div>
                    <div class="action-card" onclick="showReferrals()">
                        <div class="action-icon" style="background: var(--success-gradient);">
                            <i class="fas fa-ambulance"></i>
                        </div>
                        <div class="action-title">Referrals</div>
                    </div>
                    <div class="action-card" onclick="try { showConsultationLog(); } catch(e) { console.error('Primary function failed:', e); window.emergencyShowConsultationLog(); }">
                        <div class="action-icon" style="background: var(--warning-gradient);">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <div class="action-title">Consultation Log</div>
                    </div>
                    <div class="action-card" onclick="showSaudiCrescent()">
                        <div class="action-icon" style="background: var(--danger-gradient);">
                            <i class="fas fa-crescent-moon"></i>
                        </div>
                        <div class="action-title">Saudi Crescent</div>
                    </div>
                    <div class="action-card" onclick="openLicenseCenter()">
                        <div class="action-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-id-card"></i>
                        </div>
                        <div class="action-title">License Center</div>
                    </div>
                    <div class="action-card" onclick="openDataImporter()">
                        <div class="action-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                            <i class="fas fa-upload"></i>
                        </div>
                        <div class="action-title">Data Import</div>
                    </div>
                    <div class="action-card" onclick="openExportHub()">
                        <div class="action-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                            <i class="fas fa-download"></i>
                        </div>
                        <div class="action-title">Export Hub</div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="sidebar-section">
                <div class="section-title">
                    <i class="fas fa-chart-bar"></i>
                    QUICK STATS
                </div>
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-value" id="activeDoctorsCount">10</div>
                        <div class="stat-label">Active Doctors</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="totalShiftsCount">114</div>
                        <div class="stat-label">Total Shifts</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-value" id="avgWorkloadCount">15</div>
                        <div class="stat-label">Avg Workload</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navbar -->
            <div class="navbar-modern">
                <div class="navbar-content">
                    <!-- Search -->
                    <div class="search-container">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="search-input" id="globalSearch" placeholder="Search doctors, shifts, or dates...">
                        <div class="search-shortcut">‚åòK</div>
                    </div>

                    <!-- Right Side -->
                    <div class="navbar-nav-modern">
                        <!-- Specialists Available Today -->
                        <div class="specialists-indicator" onclick="showSpecialistsDetails()">
                            <i class="fas fa-user-md"></i>
                            <span id="specialistsTodayCount">3</span>
                        </div>

                        <!-- Theme Toggle -->
                        <button class="theme-toggle" id="lightModeBtn" onclick="setLightMode()">
                            <i class="fas fa-sun"></i>
                        </button>
                        <button class="theme-toggle" id="darkModeBtn" onclick="setDarkMode()">
                            <i class="fas fa-moon"></i>
                        </button>

                        <!-- User Menu -->
                        <div class="user-menu">
                            <div class="user-avatar">Ad</div>
                            <div class="user-info">
                                <h6>Admin</h6>
                                <small>Administrator</small>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dashboard Content -->
            <div class="dashboard-content">
                <!-- Stats Cards -->
                <div class="stats-cards-row">
                    <div class="stat-card glass-effect">
                        <div class="stat-icon" style="background: var(--primary-gradient);">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value" id="totalShiftsDisplay">114</div>
                            <div class="stat-label">Total Shifts</div>
                        </div>
                    </div>
                    <div class="stat-card glass-effect">
                        <div class="stat-icon" style="background: var(--success-gradient);">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value" id="activeDoctorsDisplay">10</div>
                            <div class="stat-label">Active Doctors</div>
                        </div>
                    </div>
                    <div class="stat-card glass-effect">
                        <div class="stat-icon" style="background: var(--warning-gradient);">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value" id="referralDutiesDisplay">33</div>
                            <div class="stat-label">Referral Duties</div>
                            <div class="stat-percentage">22%</div>
                        </div>
                    </div>
                    <div class="stat-card glass-effect">
                        <div class="stat-icon" style="background: var(--info-gradient);">
                            <i class="fas fa-stethoscope"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-value" id="specialistsAvailableDisplay">3</div>
                            <div class="stat-label">Specialists Available Today</div>
                        </div>
                    </div>
                </div>

                <!-- Monthly Roster Calendar -->
                <div class="roster-section glass-effect">
                    <div class="section-header">
                        <div class="section-title">
                            <i class="fas fa-calendar-alt"></i>
                            MONTHLY ROSTER
                        </div>
                        <div class="section-actions">
                            <div class="roster-info">
                                <span><i class="fas fa-calendar-day"></i> <span id="monthDays">30</span> Days</span>
                                <span><i class="fas fa-clock"></i> <span id="totalShiftsInfo">147</span> Total Shifts</span>
                                <span><i class="fas fa-users"></i> <span id="activeDoctorsInfo">10</span> Active Doctors</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Calendar Grid -->
                    <div class="calendar-container" id="calendarContainer">
                        <!-- Calendar will be populated by JavaScript -->
                    </div>

                    <!-- Shift Legend -->
                    <div class="shift-legend glass-effect" style="margin-top: 1rem; padding: 1rem;">
                        <div class="legend-title">
                            <i class="fas fa-clock"></i>
                            <span>Shift Schedule</span>
                        </div>
                        <div class="legend-items">
                            <div class="legend-item">
                                <div class="shift-indicator morning"></div>
                                <span>Morning: 7:00 AM - 3:00 PM</span>
                            </div>
                            <div class="legend-item">
                                <div class="shift-indicator evening"></div>
                                <span>Evening: 3:00 PM - 11:00 PM</span>
                            </div>
                            <div class="legend-item">
                                <div class="shift-indicator night"></div>
                                <span>Night: 11:00 PM - 7:00 AM</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Consultation Modal -->
    <div id="consultationModal" class="modal-overlay" style="display: none;">
        <div class="consultation-modal glass-card">
            <div class="modal-header">
                <div class="header-content">
                    <div class="header-icon">
                        <i class="fas fa-user-md"></i>
                    </div>
                    <div>
                        <h2>Consultation Management</h2>
                        <p>Track specialist responses and manage consultation requests</p>
                    </div>
                </div>
                <button class="close-btn" onclick="closeConsultationModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="consultationModalBody">
                <!-- Content will be loaded dynamically -->
            </div>
        </div>
    </div>

    <!-- Referral Modal -->
    <div id="referralModal" class="modal-overlay" style="display: none;">
        <div class="referral-modal glass-card">
            <div class="modal-header">
                <div class="header-content">
                    <div class="header-icon">
                        <i class="fas fa-ambulance"></i>
                    </div>
                    <div>
                        <h2>Referral Management</h2>
                        <p>Track emergency and life-saving referrals</p>
                    </div>
                </div>
                <button class="close-btn" onclick="closeReferralModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="referralModalBody">
                <!-- Content will be loaded dynamically -->
            </div>
        </div>
    </div>

    <!-- Consultation Log Modal -->
    <div id="consultationLogModal" class="modal-overlay" style="display: none;">
        <div class="consultation-log-modal glass-card">
            <div class="modal-header">
                <div class="header-content">
                    <div class="header-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <div>
                        <h2>CONSULTATION LOG</h2>
                        <p>Track specialist responses</p>
                    </div>
                </div>
                <button class="close-btn" onclick="closeConsultationLogModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="consultationLogModalBody">
                <!-- Content will be loaded dynamically -->
            </div>
        </div>
    </div>

    <!-- Saudi Red Crescent Modal -->
    <div id="saudiCrescentModal" class="modal-overlay" style="display: none;">
        <div class="saudi-crescent-modal glass-card">
            <div class="modal-header">
                <div class="header-content">
                    <div class="header-icon">
                        <i class="fas fa-crescent-moon"></i>
                    </div>
                    <div>
                        <h2>SAUDI RED CRESCENT</h2>
                        <p>Track ambulance referrals and handover times</p>
                    </div>
                </div>
                <button class="close-btn" onclick="closeSaudiCrescentModal()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="saudiCrescentModalBody">
                <!-- Content will be loaded dynamically -->
            </div>
        </div>
    </div>

    <!-- License Center Modal -->
    <div id="licenseCenterModal" class="modal-overlay" style="display: none;">
        <div class="license-center-modal glass-card">
            <div class="modal-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="header-content">
                    <div class="header-icon">
                        <i class="fas fa-id-card"></i>
                    </div>
                    <div>
                        <h2>LICENSE CENTER</h2>
                        <p>Manage professional credentials and certifications</p>
                    </div>
                </div>
                <button class="close-btn" onclick="closeLicenseCenter()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="licenseCenterBody">
                <!-- Content will be loaded dynamically -->
            </div>
        </div>
    </div>


<!-- Export Hub Modal -->
<div id="exportHubModal" class="modal-overlay" style="display: none;">
    <div class="export-hub-modal glass-card">
        <div class="modal-header" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="header-content">
                <div class="header-icon">
                    <i class="fas fa-download"></i>
                </div>
                <div>
                    <h2>EXPORT HUB</h2>
                    <p>Download data, analytics, and comprehensive reports</p>
                </div>
            </div>
            <button class="close-btn" onclick="closeExportHub()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body" id="exportHubBody">
            <!-- Content will be loaded dynamically -->
        </div>
    </div>
</div>

<!-- Data Import Modal -->
<div id="dataImportModal" class="modal-overlay" style="display: none;">
    <div class="data-import-modal glass-card">
        <div class="modal-header" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <div class="header-content">
                <div class="header-icon">
                    <i class="fas fa-upload"></i>
                </div>
                <div>
                    <h2>DATA IMPORT</h2>
                    <p>Upload and import roster data, staff info, and configurations</p>
                </div>
            </div>
            <button class="close-btn" onclick="closeDataImporter()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body" id="dataImportBody">
            <!-- Content will be loaded dynamically -->
        </div>
    </div>
</div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- PDF Generation Libraries - Locally Installed -->
<script src="/node_modules/jspdf/dist/jspdf.umd.min.js"></script>
<script src="/node_modules/html2canvas/dist/html2canvas.min.js"></script>

<script>
// Verify PDF libraries are loaded
document.addEventListener('DOMContentLoaded', function() {
    setTimeout(() => {
        const jsPDFAvailable = typeof window.jsPDF !== 'undefined';
        const html2canvasAvailable = typeof window.html2canvas !== 'undefined';

        if (jsPDFAvailable && html2canvasAvailable) {
            console.log('‚úÖ PDF generation libraries loaded successfully from local installation!');
            window.pdfLibrariesReady = true;
        } else {
            console.error('‚ùå PDF libraries not available:', {
                jsPDF: jsPDFAvailable,
                html2canvas: html2canvasAvailable
            });
            window.pdfLibrariesReady = false;
        }
    }, 100);
});
</script>

    <!-- Custom JavaScript -->
    <script src="/js/unifiedPDFService.js?v=<%= Date.now() %>"></script>
    <script src="/js/exportUtils.js?v=<%= Date.now() %>"></script>
    <script src="/js/dashboard.js"></script>
    <script src="/js/licenseCenter.js?v=<%= Date.now() %>"></script>
    <script src="/js/exportHub.js?v=<%= Date.now() %>"></script>
    <script src="/js/dataImporter.js?v=<%= Date.now() %>"></script>
    <script src="/js/dateConsultationModal.js?v=<%= Date.now() %>"></script>
    <script src="/js/consultationLogTableEnhancer.js?v=<%= Date.now() %>"></script>
    <script src="/js/consultationLogManager.js?v=<%= Date.now() %>"></script>
    <script src="/js/sectionManager.js?v=<%= Date.now() %>"></script>
</body>
</html>
